<!DOCTYPE html>
<html lang="">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="">
<title>Title Page</title>
<!-- Bootstrap CSS -->
<link href="../../css/bootstrap.min.css" rel="stylesheet">
<!-- 字体图标 -->
<link href="../../css/font-awesome.min.css" rel="stylesheet">
<!-- NProgress -->
<link href="../../css/nprogress.css" rel="stylesheet">
<!-- 公共样式 -->
<link href="../../css/general.css" rel="stylesheet" media="screen">
<!-- 日期样式 -->
<link href="../../css/bootstrap-datepicker3.min.css" rel="stylesheet">
<!-- toastr -->
<link href="../../css/toastr.min.css" rel="stylesheet">
<link href="../../css/bootstrapValidator.min.css" rel="stylesheet">
<!-- 选框样式 -->
<link rel="stylesheet" type="text/css" href="../../css/build.css">
<link href="../../css/add.css" rel="stylesheet" media="screen">
<!-- 选择面板 -->
<link rel="stylesheet" type="text/css" href="../../css/multi-select.css" />
</head>
<body class="bg_white">
	<div class="padding_15">
		<div class="row">
			<div class="col-md-12">
						<h4>分配角色</h4><hr/>
					<div class="x_content">
						<form class="form-horizontal form_style" id="User_addrole"
							method="post">
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
								<div class="form-group">
									<div class="col-md-12">
										<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
										</div>
										<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
											<div class="row">
												<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
													<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
														<span style="color:#18518e;margin-left:-28px;font-size:20px">所有角色：</span>
													</div>
													<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
														<span style="color:#18518e;margin-left:-13px;font-size:20px">已选角色：</span>
													</div>
												</div>
											</div>
											<div class="row">
											<select id='callbacks' multiple='multiple' name="role">
												<div th:each="role:${object.data}">
													<div th:switch="${role.biaosi}">
														<div th:case="0">
															<option th:value="${role.roleId}"
																th:text="${role.roleName}"></option>
														</div>
														<div th:case="1">
															<option th:value="${role.roleId}"
																th:text="${role.roleName}" selected="selected"></option>
														</div>
													</div>
												</div>
											</select>
										</div>
									</div>
								</div>
							</div>
							<div class="form-group">
									<div class="col-md-6 col-md-offset-3">
										<button type="submit" class="btn btn-success">提交</button>
										<button type="reset" class="btn btn-primary">重置</button>
									</div>
								<input id="userId" placeholder="组ID" th:value="${userId}"
									type="hidden" />
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	<!-- jQuery -->
	<script src="../../js/jquery-1.11.1.min.js"></script>
	<!-- Bootstrap JavaScript -->
	<script src="../../js/bootstrap.min.js"></script>
	<script src="../../js/jquery.multi-select.js"></script>
	<!-- 手机端-->
	<script src="../../js/jquery.dcjqaccordion.2.7.js"></script>
	<!-- 滚动条-->
	<script src="../../js/jquery.nicescroll.js"></script>
	<script src="../../js/jquery.scrollTo.min.js"></script>
	<!-- 消息提示 -->
	<script type="text/javascript" src="../../js/toastr.js"></script>
	<!-- 自定义  -->
	<script type="text/javascript" src="../../js/style.js"></script>
	<!-- 页面加载 -->
	<script src="../../js/nprogress.js"></script>
	<!-- 日期 -->
	<script src="../../js/bootstrap-datepicker.min.js"
		type="text/javascript"></script>
	<script src="../../js/bootstrap-datepicker.zh-CN.min.js"
		type="text/javascript"></script>
	<!-- 表单验证 -->
	<script src="../../js/bootstrapValidator.min.js"></script>
	<script src="../../js/user/user_role.js"></script>
</body>

</html>
